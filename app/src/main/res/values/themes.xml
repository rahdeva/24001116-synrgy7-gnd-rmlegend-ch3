<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.RealMadridLegends" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/teal_700</item>
    </style>

    <style name="LabelTextStyle" parent="Theme.MaterialComponents">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputStyle" parent="Theme.MaterialComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>